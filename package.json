{
	"name": "cf-multiworker-boilerplate",
	"private": true,
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*",
			"durable-objects/*"
		],
		"catalog": {
			"@biomejs/biome": "^2.3.14",
			"@firtoz/hono-fetcher": "^2.3.2",
			"@hono/zod-validator": "^0.7.6",
			"@types/node": "^25.2.1",
			"hono": "^4.11.8",
			"typescript": "^5.9.3",
			"uuid": "^13.0.0",
			"wrangler": "^4.63.0",
			"zod": "^4.3.6"
		}
	},
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"lint": "turbo lint",
		"typecheck": "turbo typecheck",
		"typegen": "turbo typegen",
		"deploy": "bun --env-file ./.env.local turbo deploy",
		"outdated": "bun outdated --recursive",
		"update:interactive": "bun update --latest --ir",
		"clean": "turbo clean && rm -rf node_modules **/node_modules"
	},
	"devDependencies": {
		"@biomejs/biome": "catalog:",
		"@turbo/gen": "^2.8.3",
		"@types/bun": "^1.3.8",
		"jsonc-parser": "^3.3.1",
		"turbo": "^2.8.3"
	},
	"packageManager": "bun@1.3.0",
	"dependencies": {
		"@firtoz/worker-helper": "^1.3.3",
		"uuid": "catalog:"
	}
}
