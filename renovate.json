{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["config:recommended", ":dependencyDashboard", ":semanticCommits"],
	"schedule": ["before 6am on Monday"],
	"timezone": "UTC",
	"packageRules": [
		{
			"description": "Auto-merge patch updates for stable dependencies",
			"matchUpdateTypes": ["patch"],
			"matchCurrentVersion": "!/^0/",
			"automerge": true,
			"automergeType": "pr",
			"automergeStrategy": "squash"
		},
		{
			"description": "Group all non-major dependencies together",
			"groupName": "all non-major dependencies",
			"groupSlug": "all-minor-patch",
			"matchUpdateTypes": ["minor", "patch"],
			"matchCurrentVersion": "!/^0/"
		},
		{
			"description": "Group React ecosystem updates",
			"groupName": "React ecosystem",
			"matchPackagePatterns": ["^react", "^@types/react"]
		},
		{
			"description": "Group Cloudflare packages",
			"groupName": "Cloudflare packages",
			"matchPackagePatterns": ["^wrangler", "^@cloudflare/"]
		},
		{
			"description": "Group Biome updates",
			"groupName": "Biome",
			"matchPackageNames": ["@biomejs/biome"]
		},
		{
			"description": "Group dev dependencies",
			"groupName": "dev dependencies",
			"matchDepTypes": ["devDependencies"],
			"matchUpdateTypes": ["patch"]
		}
	],
	"vulnerabilityAlerts": {
		"enabled": true,
		"labels": ["security"]
	},
	"labels": ["dependencies"],
	"prConcurrentLimit": 3,
	"prHourlyLimit": 2,
	"lockFileMaintenance": {
		"enabled": true,
		"schedule": ["before 6am on the first day of the month"]
	},
	"rangeStrategy": "bump"
}
