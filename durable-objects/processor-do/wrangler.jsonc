/**
 * For more details on how to configure Wrangler, refer to:
 * https://developers.cloudflare.com/workers/wrangler/configuration/
 */
{
	"$schema": "../../node_modules/wrangler/config-schema.json",
	"name": "cf-processor-do",
	"compatibility_date": "2025-04-04",
	"compatibility_flags": ["nodejs_compat"],
	"main": "./workers/app.ts",
	"vars": {
		"VALUE_FROM_CLOUDFLARE": "Hello from Cloudflare"
	},
	"observability": {
		"enabled": true
	},
	/**
	 * Smart Placement
	 * Docs: https://developers.cloudflare.com/workers/configuration/smart-placement/#smart-placement
	 */
	"placement": {
		"mode": "smart"
	},
	"durable_objects": {
		"bindings": [
			{
				"name": "ProcessorDo",
				"class_name": "ProcessorDo"
			},
			{
				"name": "CoordinatorDo",
				"class_name": "CoordinatorDo",
				"script_name": "cf-coordinator-do"
			}
		]
	},
	"migrations": [
		{
			"tag": "v1",
			"new_sqlite_classes": ["ProcessorDo"]
		}
	],
	/**
	 * Bindings
	 * Bindings allow your Worker to interact with resources on the Cloudflare Developer Platform, including
	 * databases, object storage, AI inference, real-time communication and more.
	 * https://developers.cloudflare.com/workers/runtime-apis/bindings/
	 */
	/**
	 * Queues
	 * Consumer binding - processes messages from the queue
	 * https://developers.cloudflare.com/queues/
	 */
	"queues": {
		"consumers": [
			{
				"queue": "work-queue",
				"max_batch_size": 10,
				"max_batch_timeout": 0,
				"max_retries": 3,
				"dead_letter_queue": "work-queue-dlq"
			},
			{
				"queue": "work-queue-dlq",
				"max_batch_size": 10,
				"max_batch_timeout": 0
			}
		]
	}
	// /**
	//  * D1 Database
	//  * https://developers.cloudflare.com/d1/
