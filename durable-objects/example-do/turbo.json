{
	"$schema": "../../node_modules/turbo/schema.json",
	"extends": ["//"],
	"tasks": {
		"lint": {
			"dependsOn": ["typecheck"],
			"inputs": ["workers/**/*.ts", "tsconfig.json", "tsconfig.cloudflare.json", "biome.json"],
			"outputs": []
		},
		"typecheck": {
			"dependsOn": ["typegen"],
			"inputs": ["workers/**/*.ts", "tsconfig.json", "tsconfig.cloudflare.json"],
			"outputs": []
		},
		"typegen": {
			"dependsOn": ["cf-typegen"],
			"inputs": [],
			"outputs": []
		},
		"cf-typegen": {
			"inputs": ["wrangler.jsonc", "workers/**/*.ts", "../../packages/scripts/src/**/*.ts", ".env"],
			"outputs": ["worker-configuration.d.ts"]
		},
		"deploy": {
			"dependsOn": ["scripts#pre-deploy", "typecheck"],
			"inputs": ["workers/**/*.ts", "wrangler.jsonc"],
			"outputs": [],
			"env": ["CLOUDFLARE_API_TOKEN", "CLOUDFLARE_ACCOUNT_ID"]
		}
	}
}
