{
    "$schema": "https://biomejs.dev/schemas/2.1.4/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": false
    },
    "files": {
        "ignoreUnknown": true,
        "includes": [
            "**",
            "!**/*.hbs",
            "!**/node_modules"
        ]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "tab",
        "indentWidth": 2,
        "lineWidth": 100
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "double",
            "trailingCommas": "all",
            "semicolons": "always"
        }
    }
}