{
	"$schema": "../../node_modules/turbo/schema.json",
	"extends": ["//"],
	"tasks": {
	"lint": {
		"dependsOn": ["typecheck"],
		"inputs": ["workers/**/*.ts", "tsconfig.json", "tsconfig.cloudflare.json", "biome.json"],
		"outputs": []
	},
		"typecheck": {
			"dependsOn": ["cf-typegen"],
			"inputs": ["workers/**/*.ts", "tsconfig.json", "tsconfig.cloudflare.json"],
			"outputs": []
		},
		"cf-typegen": {
			"inputs": ["wrangler.jsonc"],
			"outputs": []
		},
		"deploy": {
			"dependsOn": ["scripts#pre-deploy", "typecheck"],
			"inputs": ["workers/**/*.ts", "wrangler.jsonc"],
			"outputs": []
		}
	}
}
