{
	"extends": "./tsconfig.json",
	"include": [
		".react-router/types/**/*",
		"app/lib/types.d.ts",
		"app/**/*.ts",
		"app/**/*.tsx",
		"app/**/.server/**/*.ts",
		"app/**/.server/**/*.tsx",
		"app/**/.client/**/*.ts",
		"app/**/.client/**/*.tsx",
		"workers/**/*.ts",
		"db/**/*",
		"worker-configuration.d.ts"
	],
	"exclude": ["../../durable-objects/**/*"],
	"compilerOptions": {
		"composite": true,
		"strict": true,
		"lib": ["DOM", "DOM.Iterable", "ES2022"],
		"types": ["vite/client"],
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"baseUrl": ".",
		"rootDirs": [".", "./.react-router/types"],
		"paths": {
			"~/*": ["./app/*"]
		},
		"esModuleInterop": true,
		"resolveJsonModule": true
	}
}
