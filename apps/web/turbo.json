{
	"$schema": "../../node_modules/turbo/schema.json",
	"extends": ["//"],
	"tasks": {
		"lint": {
			"dependsOn": ["typecheck"],
			"inputs": [
				"app/**/*.ts",
				"app/**/*.tsx",
				"workers/**/*.ts",
				"workers/**/*.tsx",
				"biome.json",
				"vite.config.ts",
				"react-router.config.ts",
				"wrangler.jsonc"
			],
			"outputs": []
		},
		"typecheck": {
			"dependsOn": ["typegen"],
			"inputs": [
				"app/**/*.ts",
				"app/**/*.tsx",
				"workers/**/*.ts",
				"workers/**/*.tsx",
				"tsconfig.json",
				"tsconfig.node.json",
				"tsconfig.cloudflare.json"
			],
			"outputs": []
		},
		"typegen": {
			"dependsOn": ["cf-typegen", "rr-typegen"],
			"inputs": [],
			"outputs": []
		},
		"cf-typegen": {
			"inputs": [
				"workers/**/*.ts",
				"workers/**/*.tsx",
				"wrangler.jsonc",
				".env",
				"../../packages/scripts/src/**/*.ts"
			],
			"outputs": ["worker-configuration.d.ts"]
		},
		"rr-typegen": {
			"inputs": ["app/routes.ts", "app/routes/**/*.ts", "app/routes/**/*.tsx"],
			"outputs": []
		},
		"dev": {
			"dependsOn": ["typegen"],
			"persistent": true,
			"cache": false
		},
		"build": {
			"dependsOn": ["typecheck"],
			"inputs": [
				"app/**/*.ts",
				"app/**/*.tsx",
				"workers/**/*.ts",
				"workers/**/*.tsx",
				"vite.config.ts",
				"react-router.config.ts",
				"wrangler.jsonc",
				"node_modules/.cache/imagetools"
			],
			"outputs": ["build/**/*"]
		},
		"deploy": {
			"dependsOn": [
				"scripts#pre-deploy",
				"build",
				"example-do#deploy",
				"coordinator-do#deploy",
				"processor-do#deploy"
			],
			"inputs": ["build/**/*", "wrangler.jsonc"],
			"outputs": [],
			"env": ["CLOUDFLARE_API_TOKEN", "CLOUDFLARE_ACCOUNT_ID"]
		}
	}
}
