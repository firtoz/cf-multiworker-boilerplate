{
	"$schema": "https://turborepo.com/schema.json",
	"extends": ["//"],
	"tasks": {
		"lint": {
			"dependsOn": ["typecheck"],
			"inputs": [
				"app/**/*.{ts,tsx}",
				"workers/**/*.{ts,tsx}",
				"biome.json",
				"vite.config.ts",
				"react-router.config.ts",
				"wrangler.jsonc"
			],
			"outputs": []
		},
		"typecheck": {
			"dependsOn": ["cf-typegen", "rr-typegen"],
			"inputs": [
				"app/**/*.{ts,tsx}",
				"workers/**/*.{ts,tsx}",
				"tsconfig.json",
				"tsconfig.node.json",
				"tsconfig.cloudflare.json"
			],
			"outputs": []
		},
		"pre-typegen": {
			"inputs": ["wrangler.jsonc"],
			"outputs": ["wrangler.temp.jsonc", "wrangler.dev.jsonc"]
		},
		"cf-typegen": {
			"dependsOn": ["pre-typegen"],
			"inputs": ["wrangler.jsonc", "wrangler.temp.json", ".env"],
			"outputs": []
		},
		"rr-typegen": {
			"inputs": ["app/routes.ts", "app/routes/**/*.{ts,tsx}"],
			"outputs": []
		},
		"dev": {
			"dependsOn": ["cf-typegen"],
			"persistent": true,
			"cache": false
		},
		"build": {
			"dependsOn": ["typecheck"],
			"inputs": [
				"app/**/*.{ts,tsx}",
				"workers/**/*.{ts,tsx}",
				"vite.config.ts",
				"react-router.config.ts",
				"wrangler.jsonc"
			],
			"outputs": ["build/**/*"]
		},
		"deploy": {
			"dependsOn": ["build", "example-do#deploy"],
			"inputs": ["build/**/*", "wrangler.jsonc"],
			"outputs": [],
			"env": ["CLOUDFLARE_API_TOKEN", "CLOUDFLARE_ACCOUNT_ID"]
		}
	}
}
