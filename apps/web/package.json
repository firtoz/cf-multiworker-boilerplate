{
	"name": "cf-web-app",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "react-router build",
		"pre-typegen": "bun ../../scripts/pre-typegen.ts",
		"cf-typegen": "bunx wrangler types -c wrangler.temp.json",
		"rr-typegen": "react-router typegen",
		"deploy": "bun ../../scripts/wrangler.ts deploy",
		"dev": "react-router dev",
		"preview": "bun run build && vite preview",
		"typecheck": "tsc -b",
		"lint": "biome check --write .",
		"lint:format": "biome format --write .",
		"db:generate": "drizzle-kit generate",
		"db:migrate:local": "bunx wrangler d1 migrations apply cf-web-app-db --local",
		"db:push": "drizzle-kit push:d1",
		"db:studio": "cross-env LOCAL_DB_PATH=$(find .wrangler/state/v3/d1/miniflare-D1DatabaseObject -type f -name '*.sqlite' -print -quit) drizzle-kit studio"
	},
	"dependencies": {
		"@wooorm/starry-night": "^3.7.0",
		"drizzle-orm": "^0.43.1",
		"drizzle-zod": "^0.8.1",
		"example-do": "workspace:*",
		"isbot": "^5.1.28",
		"jotai": "^2.12.4",
		"json-diff": "^1.0.6",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"react-router": "^7.6.0",
		"uuid": "^11.1.0",
		"zod": "^3.25.20",
		"zod-form-data": "^2.0.7",
		"zod-validation-error": "^3.4.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@cloudflare/vite-plugin": "^1.2.4",
		"@react-router/dev": "^7.6.0",
		"@tailwindcss/vite": "^4.1.7",
		"@types/json-diff": "^1.0.3",
		"@types/node": "^22.15.21",
		"@types/react": "^19.1.5",
		"@types/react-dom": "^19.1.5",
		"better-sqlite3": "^11.10.0",
		"cross-env": "^7.0.3",
		"drizzle-kit": "^0.31.1",
		"tailwindcss": "^4.1.7",
		"typescript": "^5.8.3",
		"vite": "^6.3.5",
		"vite-tsconfig-paths": "^5.1.4",
		"wrangler": "^4.16.1"
	},
	"packageManager": "bun@1.2.14"
}
